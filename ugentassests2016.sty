% Define the font
\newfontfamily\pannofamily{UGent Panno Text}[
    BoldFont	= UGent Panno Text SemiBold
]

% Define useful fonts commands that set the text to Pano, with an optional size
\NewDocumentCommand{\panno}{ o O{#1} m } {%
    \IfNoValueTF {#1} {%
        {\pannofamily #3}
    }{%
        {\fontsize{#1}{#2}\pannofamily #3}
    }%
}
\NewDocumentCommand{\pannosemibold}{ o O{#1} m } {%
    \IfNoValueTF {#1} {%
        {\textbf{\pannofamily #3}}
    }{%
        {\textbf{\fontsize{#1}{#2}\pannofamily #3}}
    }%
}

