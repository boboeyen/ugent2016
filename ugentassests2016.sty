% Provide the font family
\newfontfamily\pannofamily{UGent Panno Text}[
    BoldFont	= UGent Panno Text SemiBold
]

% Allow easy use of the Panno font by providing a command to apply the font.
% Use: \panno[20pt][30pt]{text}
% The sizes are optional; if present they are passed to the \fontsize command.
\NewDocumentCommand\panno{ o O{#1} m } {%
    \IfNoValueTF {#1} {%
        {\pannofamily #3}
    }{%
        {\fontsize{#1}{#2}\pannofamily #3}
    }%
}
% Allow easy use of the Panno SemiBold font by providing a command to apply the font.
% Use: \pannosemibold[20pt][30pt]{text}
% The sizes are optional; if present they are passed to the \fontsize command.
\NewDocumentCommand\pannosemibold{ o O{#1} m } {%
    \IfNoValueTF {#1} {%
        {\textbf{\pannofamily #3}}
    }{%
        {\textbf{\fontsize{#1}{#2}\pannofamily #3}}
    }%
}

